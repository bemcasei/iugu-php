{
  "name": "bemcasei/iugu-php",
  "description": "PHP Library for Iugu",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "William Hoffmann",
      "email": "williamhoffmann@outlook.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/bemcasei/iugu-php/issues",
    "source": "https://github.com/bemcasei/iugu-php"
  },
  "minimum-stability": "dev",
  "require": {
    "php": "^7.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.3@dev"
  },
  "autoload": {
    "psr-4": {
      "Iugu\\Sdk\\": "src/"
    }
  },
  "autoload-dev":{
    "psr-4": {
      "Iugu\\SdkTest\\": "tests"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  },
  "require-dev": {
    "mockery/mockery": "^1.0@dev",
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "^3.0@dev"
  },
  "config": {
    "sort-packages": true
  }
}